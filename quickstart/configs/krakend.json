{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "tls": {
    "public_key": "/etc/letsencrypt/live/openchami.bikeshack.dev/fullchain.pem",
    "private_key": "/etc/letsencrypt/live/openchami.bikeshack.dev/privkey.pem"
  },
  "extra_config": {
    "github.com/devopsfaith/krakend-tls": {
      "force_https": true
    },
    "telemetry/logging": {
      "level": "DEBUG",
      "syslog": false,
      "stdout": true
    },
    "security/http": {
      "allowed_hosts": [],
      "ssl_proxy_headers": {},
      "ssl_redirect": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/login",
      "method": "GET",
      "output_encoding": "negotiate",
      "backend": [
        {
          "url_pattern": "/login",
          "encoding": "xml",
          "sd": "static",
          "host": [
            "http://localhost:3000"
          ]
        }
      ]
    },
    {
      "endpoint": "/token",
      "method": "GET",
      "output_encoding": "negotiate",
      "backend": [
        {
          "url_pattern": "/token",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://opaal:3333"
          ],
          "disable_host_sanitize": false
        }
      ]
    }
  ]
}
