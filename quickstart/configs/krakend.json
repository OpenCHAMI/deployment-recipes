{
  "$schema": "https://www.krakend.io/schema/krakend.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "json",
  "extra_config": {
    "telemetry/logging": {
      "level": "DEBUG",
      "syslog": false,
      "stdout": true
    }
  },
  "endpoints": [
    {
      "endpoint": "/login",
      "method": "GET",
      "output_encoding": "negotiate",
      "backend": [
        {
          "url_pattern": "/login",
          "encoding": "xml",
          "sd": "static",
          "host": [
            "http://opaal:3333"
          ]
        }
      ]
    },
    {
      "endpoint": "/token",
      "method": "GET",
      "output_encoding": "negotiate",
      "backend": [
        {
          "url_pattern": "/token",
          "encoding": "json",
          "sd": "static",
          "method": "GET",
          "host": [
            "http://opaal:3333"
          ],
          "disable_host_sanitize": false
        }
      ]
    },
    {
      "endpoint": "/hsm/v2/Inventroy/EthernetInterfaces",
      "method": "GET",
      "output_encoding": "negotiate",
      "backend": [
        {
          "url_pattern": "/hsm/v2/Inventroy/EthernetInterfaces",
          "method": "GET",
          "encoding": "json",
          "sd": "static",
          "host": [
            "http://smd:27779"
          ]
        }
      ]
    },
    {
      "endpoint": "/hsm/v2/Inventroy/EthernetInterfaces",
      "method": "POST",
      "output_encoding": "negotiate",
      "backend": [
        {
          "url_pattern": "/hsm/v2/Inventroy/EthernetInterfaces",
          "method": "POST",
          "encoding": "json",
          "sd": "static",
          "host": [
            "http://smd:27779"
          ]
        }
      ]
    },
    {
      "endpoint": "/hsm/v2/Inventroy/EthernetInterfaces/{id}",
      "method": "DELETE",
      "output_encoding": "negotiate",
      "backend": [
        {
          "url_pattern": "/hsm/v2/Inventroy/EthernetInterfaces/{id}",
          "method": "DELETE",
          "encoding": "json",
          "sd": "static",
          "host": [
            "http://smd:27779"
          ]
        }
      ]
    },
    {
      "endpoint": "/hsm/v2/State/Components",
      "method": "GET",
      "output_encoding": "negotiate",
      "backend": [
        {
          "url_pattern": "/hsm/v2/State/Components",
          "method": "GET",
          "encoding": "json",
          "sd": "static",
          "host": [
            "http://smd:27779"
          ]
        }
      ]
    },
    {
      "endpoint": "/hsm/v2/State/Components/{id}",
      "method": "GET",
      "output_encoding": "negotiate",
      "backend": [
        {
          "url_pattern": "/hsm/v2/State/Components/{id}",
          "method": "GET",
          "encoding": "json",
          "sd": "static",
          "host": [
            "http://smd:27779"
          ]
        }
      ]
    },
    {
      "endpoint": "/hsm/v2/State/Components/{id}",
      "method": "DELETE",
      "output_encoding": "negotiate",
      "backend": [
        {
          "url_pattern": "/hsm/v2/State/Components/{id}",
          "method": "DELETE",
          "encoding": "json",
          "sd": "static",
          "host": [
            "http://smd:27779"
          ]
        }
      ]
    },
    {
      "endpoint": "/hsm/v2/State/Components",
      "method": "POST",
      "output_encoding": "negotiate",
      "backend": [
        {
          "url_pattern": "/hsm/v2/State/Components",
          "method": "POST",
          "encoding": "json",
          "sd": "static",
          "host": [
            "http://smd:27779"
          ]
        }
      ]
    }
  ]
}
